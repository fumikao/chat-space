.side
  .side-header
    .side-header__name
      = current_user.name
    .side-header__icons
      = link_to new_group_path do
        = fa_icon 'edit'
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog'
  %ul.side-groups
    %li.side-groups__group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          %p.side-groups__group-name
            = group.name
          %p.side-groups__group-message
            = group.show_last_message